<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sistema Supermercado</title>

    <!--bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!--iconos-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .navbar-brand {
        font-weight: bold;
    }
    .table-actions {
        white-space: nowrap;
    }
    .card {
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        margin-bottom: 20px;
    }
    .btn-action {
        margin: 2px;
    }
        .page-header {
            background: linear-gradient(to bottom,#212529, #212529);
            color: white;
            padding: 30px 0;
            margin-bottom: 30px;
        }
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
    }
    
    .container-fluid {
        min-height: calc(100vh - 160px); 
        padding-bottom: 20px;
    }
    
    footer {
        position: relative;
        bottom: 0;
        width: 100%;
        margin-top: auto;
    }
    </style>
</head>
<body>
    <!--navbar-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <i class="fas fa-store"></i> Supermercado Pro
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">
                            <i class="fas fa-home"></i> Inicio
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Productos")">
                            <i class="fas fa-boxes"></i> Productos
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!--contenido-->
    <div class="container-fluid px-0">
        <div class="page-header">
            <div class="container">
                <h1>@ViewBag.Title</h1>
                <p class="lead">@ViewBag.Message</p>
            </div>
        </div>

        <div class="container">
            @RenderBody()
        </div>
    </div>

    <!--footer-->
    <footer class="bg-dark text-white mt-5 py-4">
        <div class="container text-center">
            <p>&copy; @DateTime.Now.Year - Tarea DAS Control productos de un supermercado</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>