@model SistemaControlProductos.Models.Producto

@{
    ViewBag.Title = "Detalles del Producto";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-eye"></i> Detalles del Producto
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">ID del Producto:</label>
                                <p class="form-control-plaintext">@Model.ProductoId</p>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Nombre:</label>
                                <p class="form-control-plaintext">@Model.Nombre</p>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Categoria:</label>
                                <p>
                                    @if (Model.Categoria != null)
                                    {
                                        <span class="badge bg-primary">@Model.Categoria.Nombre</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">No asignada</span>
                                    }
                                </p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Precio:</label>
                                <p class="form-control-plaintext text-success fw-bold">
                                    $@Model.Precio
                                </p>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Stock:</label>
                                <p>
                                    @if (Model.Stock < 10)
                                    {
                                        <span class="badge bg-danger">@Model.Stock unidades</span>
                                    }
                                    else if (Model.Stock < 20)
                                    {
                                        <span class="badge bg-warning">@Model.Stock unidades</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">@Model.Stock unidades</span>
                                    }
                                </p>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Proveedor:</label>
                                <p class="form-control-plaintext">
                                    @if (Model.Proveedor != null)
                                    {
                                        @Model.Proveedor.Nombre
                                    }
                                    else
                                    {
                                        <span class="text-muted">No asignado</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4 pt-3 border-top">
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Volver a la Lista
                            </a>
                            <div>
                                <a href="@Url.Action("Edit", new { id = Model.ProductoId })" class="btn btn-warning">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a href="@Url.Action("Index")" class="btn btn-primary">
                                    <i class="fas fa-list"></i> Ver Todos
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>