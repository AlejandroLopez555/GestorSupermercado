@model SistemaControlProductos.Models.Producto

@{
    ViewBag.Title = "Editar Producto";
    ViewBag.Message = "Modifica la información del producto existente";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-warning text-white">
                <h4 class="card-title mb-0">
                    <i class="fas fa-edit me-2"></i>Editar Producto
                </h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.ProductoId)

                    <div class="row">
                        <div class="col-md-6">
                            <!-- Aqui es la informacion Basica -->
                            <div class="card mb-4">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0">
                                        <i class="fas fa-info-circle me-2"></i>Información Básica
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="form-group mb-3">
                                        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "form-label fw-bold" })
                                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingresa el nombre del producto" } })
                                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger small" })
                                    </div>

                                    <div class="form-group mb-3">
                                        @Html.LabelFor(model => model.CategoriaId, "Categoría", htmlAttributes: new { @class = "form-label fw-bold" })
                                        @Html.DropDownList("CategoriaId", null, "-- Selecciona una categoría --", htmlAttributes: new { @class = "form-select" })
                                        @Html.ValidationMessageFor(model => model.CategoriaId, "", new { @class = "text-danger small" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <!-- Precio y Stock -->
                            <div class="card mb-4">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0">
                                        <i class="fas fa-chart-bar me-2"></i>Inventario y Precio
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="form-group mb-3">
                                        @Html.LabelFor(model => model.Precio, htmlAttributes: new { @class = "form-label fw-bold" })
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control", placeholder = "0.00", step = "0.01" } })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger small" })
                                    </div>

                                    <div class="form-group mb-3">
                                        @Html.LabelFor(model => model.Stock, htmlAttributes: new { @class = "form-label fw-bold" })
                                        @Html.EditorFor(model => model.Stock, new { htmlAttributes = new { @class = "form-control", placeholder = "0", min = "0" } })
                                        @Html.ValidationMessageFor(model => model.Stock, "", new { @class = "text-danger small" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Proveedor -->
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">
                                <i class="fas fa-truck me-2"></i>Información del Proveedor
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group mb-3">
                                        @Html.LabelFor(model => model.ProveedorId, "Proveedor", htmlAttributes: new { @class = "form-label fw-bold" })
                                        @Html.DropDownList("ProveedorId", null, "-- Selecciona un proveedor --", htmlAttributes: new { @class = "form-select" })
                                        @Html.ValidationMessageFor(model => model.ProveedorId, "", new { @class = "text-danger small" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Informacion de Auditoria -->
                    <div class="card mb-4">
                        <div class="card-header bg-info text-white">
                            <h6 class="mb-0">
                                <i class="fas fa-history me-2"></i>Información del Sistema
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <small class="text-muted">
                                        <strong>ID del Producto:</strong> @Model.ProductoId
                                    </small>
                                </div>
                                <div class="col-md-6">
                                    <small class="text-muted">
                                        <strong>Última modificacion:</strong> @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!--Botones de Accion-->
                    <div class="d-flex justify-content-between mt-4">
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Cancelar
                        </a>
                        <div>
                            <a href="@Url.Action("Details", new { id = Model.ProductoId })" class="btn btn-info me-2">
                                <i class="fas fa-eye me-1"></i> Ver Detalles
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save me-1"></i> Guardar Cambios
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!--Script para mejorar la experiencia del usuario-->
@section Scripts {
    <script>
        $(document).ready(function () {
            // Agregar foco al primer campo
            $('#Nombre').focus();

            // Validacion para precio
            $('#Precio').on('input', function () {
                let value = parseFloat($(this).val());
                if (value < 0.01) {
                    $(this).addClass('is-invalid');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });

            // Validacion para stock
            $('#Stock').on('input', function () {
                let value = parseInt($(this).val());
                if (value < 0) {
                    $(this).addClass('is-invalid');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });

            // Mostrar alerta si hay cambios sin guardar
            $('form').on('change', function () {
                window.onbeforeunload = function () {
                    return 'Tienes cambios sin guardar. ¿Estás seguro de que quieres salir?';
                };
            });

            $('button[type="submit"]').on('click', function () {
                window.onbeforeunload = null;
            });
        });
    </script>
}